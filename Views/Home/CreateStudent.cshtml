@using MVCDemoNetCore.Util;
@model Student

@{
    ViewData["Title"] = "Create student info";
}

<form asp-controller="home" asp-action="CreateStudent" method="post" class="mt-3">
    <div class="form-group row mb-3">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name"  type="text" class="form-control" placeholder="Please input your name"/>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="Email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" type="email" class="form-control" placeholder="Email Address">
        </div>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="ClassName" class="col-sm-2 col-form-label">Class Name</label>
        <div class="col-sm-10">
            <select asp-for="ClassName" asp-items="Html.GetEnumSelectList<ClassName>()" class="custom-select col-sm-3"></select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </div>
</form>
